extends ../layout

block content
  .col-md-3
    nav.well.sidebar-nav
      ul.nav.nav-list
        li
          a#showLinksHistogram(href="#")
            i.icon-plus
            = 'Histogram'
        li.nav-header Created
  #chart.col-md-5
  .col-md-5
    table
      each link in links
        tr
          td= link._id
          td= link.value.count
          td
            dl
              each share in link.value.sharedBy
                dd= share.id
                dt= share.date

  script(src='/js/d3.v2.js')
  script(src='/js/build/linksHistogram.js')
